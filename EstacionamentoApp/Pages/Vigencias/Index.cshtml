@page
@model EstacionamentoApp.Pages.Vigencias.IndexModel
@{
    ViewData["Title"] = "Vigências";
}

<div class="container">
    <a asp-page="./Create" class="btn btn-success">Novo</a>
</div>

<div class="container">
    <table class="table table-striped table-inverse table-responsive">
        <thead class="thead-inverse">
            <tr>
                <th>@Html.DisplayName("Data início da vigência")</th>
                <th>@Html.DisplayName("Valor da hora")</th>
                <th>@Html.DisplayName("Hora adicional")</th>
                <th>@Html.DisplayName("Data fim da vigência")</th>
                <th>Editar | Deletar</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Vigencias)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.VigenciaInicio)</td>
                        <td>@Html.DisplayFor(modelItem => item.ValorHora)</td>
                        <td>@Html.DisplayFor(modelItem => item.HoraAdicional)</td>
                        <td>@Html.DisplayFor(modelItem => item.VigenciaFim)</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Index" onclick="return confirm('Tem certeza que deseja deletar?');" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
    </table>
</div>